<p id="notice"><%= notice %></p>

<h1>Bids for <%= @product.name %></h1>

<table>
  <thead>
    <tr>
      <th>Number</th>
      <th>Value</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bids.each_with_index do |bid, index| %>
      <tr>
        <td><%= index + 1 %></td>
        <td><%= bid.value %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Bid', new_product_bid_path(@product) %>
<%= link_to 'Products Page', products_path %>
